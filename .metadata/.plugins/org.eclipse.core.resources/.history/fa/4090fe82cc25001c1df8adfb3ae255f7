package task4;

public class TowerOfHanoi {

	static void towerOfHanoi(int disk, char from_rod, char to_rod, char aux_rod) {
		if (disk == 1) {
			System.out.println("Move disk 1 from rod " + from_rod + " to rod " + to_rod);
			return;
		}
		towerOfHanoi(disk - 1, from_rod, aux_rod, to_rod);
		System.out.println("Move disk " + disk + " from rod " + from_rod + " to rod " + to_rod);
		towerOfHanoi(disk - 1, aux_rod, to_rod, from_rod);
	}

	// Driver code
	public static void main(String args[]) {
		int n = 4; // Number of disks
		towerOfHanoi(n, 'A', 'C', 'B'); // A, B and C are names of rods
	}
}

